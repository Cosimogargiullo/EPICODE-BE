
public class Rettangolo {

//	Properties
	double h;
	double w;

//	Constructor
	public Rettangolo(double h, double w) {
		this.h = h;
		this.w = w;
	}

//	Methods
	
//	Perimeter
	public double perimeter(double h, double w) {
		return (h*2)+(w*2);
	}

//	Area
	public double area(double h, double w) {
		return h*w;
	}
	
//	PrintRectangle
	public String printR(double h, double w) {
		return "The area of your rectangle is " + this.area(h, w) + " and the perimeter is " + this.perimeter(h, w);
	}

	
}
